@page "/admin/export"
@layout AdminLayout
@using QuanLyKho.Components.Layout 
@inject NavigationManager Nav

<PageTitle>Quản lý Xuất Kho</PageTitle>

@* --- BẮT ĐẦU PHẦN NỘI DUNG --- *@
<div class="container-fluid">
    
    @* Tiêu đề trang *@
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Xuất Kho</h1>
    </div>

    @* Form nhập liệu *@
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin phiếu xuất</h6>
                </div>
                <div class="card-body">
                    
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mã sản phẩm / Tên SP:</label>
                        <input type="text" class="form-control" @bind="maSanPham" placeholder="Nhập mã sản phẩm..." />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Số lượng xuất:</label>
                            <input type="number" class="form-control" @bind="soLuong" min="1" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Ngày xuất:</label>
                            <input type="date" class="form-control" @bind="ngayXuat" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Ghi chú:</label>
                        <textarea class="form-control" rows="3" @bind="ghiChu" placeholder="Lý do xuất kho..."></textarea>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <button class="btn btn-secondary" @onclick="HuyBo">Hủy bỏ</button>
                        <button class="btn btn-danger" @onclick="XuLyXuatKho">Xác nhận Xuất</button>
                    </div>

                </div>
            </div>
        </div>

        @* Phần lưu ý bên phải *@
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-warning text-dark">
                    <h6 class="m-0 font-weight-bold">Lưu ý quan trọng</h6>
                </div>
                <div class="card-body">
                    <p>Hành động xuất kho sẽ trừ trực tiếp vào số lượng tồn kho của hệ thống.</p>
                    <p class="mb-0">Vui lòng kiểm tra kỹ <strong>Mã Sản Phẩm</strong> trước khi bấm xác nhận.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string? maSanPham;
    private int soLuong = 1;
    private DateTime ngayXuat = DateTime.Now;
    private string? ghiChu;
    private string? errorMessage;

    private void XuLyXuatKho()
    {
        if (string.IsNullOrWhiteSpace(maSanPham))
        {
            errorMessage = "Vui lòng nhập Mã sản phẩm.";
            return;
        }
        // Logic xử lý xuất kho...
        Nav.NavigateTo("/");
    }

    private void HuyBo()
    {
        Nav.NavigateTo("/");
    }
}