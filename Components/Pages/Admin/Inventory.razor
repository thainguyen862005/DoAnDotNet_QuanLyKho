@page "/admin/inventory"
@using QuanLyKho.Components.Layout
@layout AdminLayout
@rendermode InteractiveServer
@inject NavigationManager Nav

<PageTitle>Admin - Quản lý Tồn kho</PageTitle>

<div class="container-fluid">
    @* Tiêu đề và Nút hành động *@
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Quản lý Tồn kho</h1>
        <div class="d-flex gap-2">
            <button class="btn btn-sm btn-primary shadow-sm" @onclick='() => Nav.NavigateTo("/admin/import")'>
                <i class="bi bi-plus-lg"></i> Nhập kho
            </button>
            <button class="btn btn-sm btn-danger shadow-sm" @onclick='() => Nav.NavigateTo("/admin/export")'>
                <i class="bi bi-box-arrow-right"></i> Xuất kho
            </button>
        </div>
    </div>

    @* Card chứa bảng dữ liệu *@
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách tồn kho chi tiết</h6>
            
            @* Ô tìm kiếm *@
            <div class="input-group input-group-sm" style="width: 250px;">
                <input type="text" class="form-control bg-light border-0 small" placeholder="Tìm tên hoặc mã SP..."
                       @bind="tuKhoa" @bind:event="oninput" @onkeyup="TimKiem" />
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button" @onclick="TimKiem">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="table-light text-dark">
                        <tr>
                            <th>Mã SP</th>
                            <th>Tên Sản Phẩm</th>
                            <th class="text-center">Tổng Nhập</th>
                            <th class="text-center">Tổng Xuất</th>
                            <th class="text-center fw-bold">Tồn Kho</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in danhSachHienThi)
                        {
                            <tr>
                                <td class="align-middle">@item.MaSP</td>
                                <td class="align-middle fw-bold text-primary">@item.TenSP</td>
                                <td class="align-middle text-center text-success">+@item.TongNhap</td>
                                <td class="align-middle text-center text-secondary">-@item.TongXuat</td>
                                <td class="align-middle text-center">
                                    <span class="fs-5 fw-bold @(item.TonKho < 10 ? "text-danger" : "text-dark")">
                                        @item.TonKho
                                    </span>
                                </td>
                                <td class="align-middle text-center">
                                    @if (item.TonKho == 0)
                                    {
                                        <span class="badge bg-secondary">Hết hàng</span>
                                    }
                                    else if (item.TonKho < 10)
                                    {
                                        <span class="badge bg-warning text-dark">Sắp hết</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Sẵn sàng</span>
                                    }
                                </td>
                                
                                @* --- PHẦN NÚT BẤM ĐÃ ĐƯỢC SỬA --- *@
                                <td class="align-middle text-center">
                                     <button class="btn btn-sm btn-info text-white me-1" title="Xem chi tiết">
                                        <i class="bi bi-search"></i>
                                    </button>

                                    <button class="btn btn-sm btn-warning me-1" title="Sửa/Cấu hình">
                                        <i class="bi bi-wrench"></i>
                                    </button>

                                    <button class="btn btn-sm btn-danger" title="Xóa" @onclick="() => XoaSanPham(item)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                            </td>
                            </tr>
                        }
                        @if (danhSachHienThi.Count == 0)
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4 text-muted">Không tìm thấy sản phẩm nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    // --- KHAI BÁO CLASS DỮ LIỆU ---
    public class TonKhoItem
    {
        public string MaSP { get; set; } = "";
        public string TenSP { get; set; } = "";
        public int TongNhap { get; set; }
        public int TongXuat { get; set; }
        public int TonKho => TongNhap - TongXuat;
    }

    private string tuKhoa = "";
    private List<TonKhoItem> danhSachGoc = new();
    private List<TonKhoItem> danhSachHienThi = new();

    // --- KHỞI TẠO DỮ LIỆU ---
    protected override void OnInitialized()
    {
        danhSachGoc = new List<TonKhoItem>
        {
            new TonKhoItem { MaSP = "VL001", TenSP = "Xi măng Hà Tiên", TongNhap = 1000, TongXuat = 500 },
            new TonKhoItem { MaSP = "VL002", TenSP = "Gạch ống Tuynel", TongNhap = 5000, TongXuat = 4950 },
            new TonKhoItem { MaSP = "VL003", TenSP = "Thép Pomina phi 16", TongNhap = 200, TongXuat = 50 },
            new TonKhoItem { MaSP = "NO001", TenSP = "Sơn Dulux Trắng", TongNhap = 100, TongXuat = 100 },
            new TonKhoItem { MaSP = "VL004", TenSP = "Cát xây dựng (Khối)", TongNhap = 50, TongXuat = 12 },
        };
        danhSachHienThi = danhSachGoc.ToList(); // Copy ra danh sách hiển thị
    }

    // --- XỬ LÝ TÌM KIẾM ---
    private void TimKiem()
    {
        if (string.IsNullOrWhiteSpace(tuKhoa))
        {
            danhSachHienThi = danhSachGoc.ToList();
        }
        else
        {
            danhSachHienThi = danhSachGoc
                .Where(x => x.TenSP.ToLower().Contains(tuKhoa.ToLower()) || 
                            x.MaSP.ToLower().Contains(tuKhoa.ToLower()))
                .ToList();
        }
    }

    // --- HÀM XÓA SẢN PHẨM (MỚI THÊM) ---
    private void XoaSanPham(TonKhoItem itemCanXoa)
    {
        // Xóa khỏi danh sách gốc
        danhSachGoc.Remove(itemCanXoa);
        
        // Xóa khỏi danh sách đang hiển thị trên màn hình
        danhSachHienThi.Remove(itemCanXoa);
    }
}