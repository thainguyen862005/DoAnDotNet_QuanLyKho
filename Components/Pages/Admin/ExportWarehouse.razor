@page "/admin/export"
@layout AdminLayout
@using QuanLyKho.Components.Layout
@inject NavigationManager Nav
@rendermode InteractiveServer

<PageTitle>Xuất kho</PageTitle>

<div class="container-fluid">
    @* Tiêu đề *@
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Xuất Kho (Admin)</h1>
    </div>

    <div class="row">
        @* CỘT TRÁI: Form Xuất kho *@
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 border-left-danger">
                    <h6 class="m-0 font-weight-bold text-danger">Thông tin phiếu xuất</h6>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mã sản phẩm:</label>
                        <input class="form-control" @bind="maSanPham" placeholder="Nhập mã sản phẩm..." />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên sản phẩm:</label>
                        <input class="form-control" @bind="tenSanPham" placeholder="Nhập tên sản phẩm..." />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Số lượng xuất:</label>
                            <input type="number" class="form-control" @bind="soLuong" min="1" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Ngày xuất:</label>
                            <input type="date" class="form-control" @bind="ngayXuat" />
                        </div>
                    </div>

                    <div class="mb-3">
                        @* Xuất kho thì thường là Người nhận hoặc Khách hàng *@
                        <label class="form-label fw-bold">Người nhận / Khách hàng:</label>
                        <input class="form-control" @bind="nguoiNhan" placeholder="Tên người nhận..." />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Lý do xuất kho:</label>
                        <textarea class="form-control" rows="3" @bind="ghiChu" placeholder="Ví dụ: Xuất bán, Xuất hủy..."></textarea>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <button class="btn btn-secondary" @onclick="HuyBo">Hủy bỏ</button>
                        @* Nút màu đỏ cho hành động xuất *@
                        <button class="btn btn-danger" @onclick="XuLyXuatKho">Xác nhận Xuất</button>
                    </div>
                </div>
            </div>
        </div>

        @* CỘT PHẢI: Tóm tắt *@
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-warning text-dark">
                    <h6 class="m-0 font-weight-bold">Tóm tắt phiếu xuất</h6>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>Mã SP:</strong> @maSanPham</p>
                    <p class="mb-1"><strong>Tên SP:</strong> @tenSanPham</p>
                    <p class="mb-1 text-danger"><strong>Số lượng xuất:</strong> -@soLuong</p>
                    <p class="mb-1"><strong>Người nhận:</strong> @nguoiNhan</p>
                    <hr />
                    <small class="text-muted">Lưu ý: Số lượng này sẽ được trừ trực tiếp vào kho.</small>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string? maSanPham;
    private string? tenSanPham;
    private int soLuong = 1;
    private DateTime ngayXuat = DateTime.Now;
    private string? nguoiNhan;
    private string? ghiChu;
    private string? errorMessage;

    private void XuLyXuatKho()
    {
        if (string.IsNullOrWhiteSpace(maSanPham) && string.IsNullOrWhiteSpace(tenSanPham))
        {
            errorMessage = "Vui lòng nhập Mã hoặc Tên sản phẩm.";
            return;
        }

        if (soLuong <= 0)
        {
            errorMessage = "Số lượng xuất phải lớn hơn 0.";
            return;
        }

        // TODO: Logic trừ kho trong Database

        Nav.NavigateTo("/admin/inventory");
    }

    private void HuyBo()
    {
        Nav.NavigateTo("/admin/inventory");
    }
}