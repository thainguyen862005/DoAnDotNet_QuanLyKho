@page "/admin/import"
@layout Components.Layout.AdminLayout
@using QuanLyKho.Data
@rendermode InteractiveServer
@inject NavigationManager Nav
@inject AppDbContext Db

<PageTitle>Nhập kho</PageTitle>

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Nhập Kho (Admin)</h1>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin phiếu nhập</h6>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }
                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success">@successMessage</div>
                    }

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mã sản phẩm (SKU):</label>
                        <input class="form-control" @bind="maSanPham" placeholder="Ví dụ: IP-15-PRO..." />
                        <small class="text-muted">Nhập chính xác mã SKU để hệ thống tìm nhanh hơn.</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên sản phẩm (Nếu không nhớ mã):</label>
                        <input class="form-control" @bind="tenSanPham" placeholder="Nhập tên sản phẩm..." />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Số lượng nhập:</label>
                            <input type="number" class="form-control" @bind="soLuong" min="1" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Ngày nhập:</label>
                            <input type="date" class="form-control" @bind="ngayNhap" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Nhà cung cấp / Nguồn:</label>
                        <div class="input-group">
                            <select class="form-select" @bind="nhaCungCap">
                                <option value="">-- Chọn nhà cung cấp --</option>
                                @foreach (var sup in suppliers)
                                {
                                    <option value="@sup.Name">@sup.Name</option>
                                }
                            </select>
                            <button class="btn btn-outline-secondary" type="button" @onclick='() => Nav.NavigateTo("/admin/suppliers")'>
                                <i class="bi bi-plus-lg"></i> Thêm NCC
                            </button>
                        </div>
                        @if (!suppliers.Any())
                        {
                            <small class="text-danger">Chưa có nhà cung cấp nào. Vui lòng thêm mới!</small>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Ghi chú:</label>
                        <textarea class="form-control" rows="3" @bind="ghiChu" placeholder="Ghi chú thêm..."></textarea>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <button class="btn btn-secondary" @onclick="HuyBo">Quay lại</button>
                        <button class="btn btn-success" @onclick="XuLyNhapKho">Xác nhận Nhập</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-info text-white">
                    <h6 class="m-0 font-weight-bold">Tóm tắt</h6>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>Mã SKU:</strong> @(string.IsNullOrEmpty(maSanPham) ? "-" : maSanPham)</p>
                    <p class="mb-1"><strong>Tên SP:</strong> @(string.IsNullOrEmpty(tenSanPham) ? "-" : tenSanPham)</p>
                    <p class="mb-1"><strong>Số lượng:</strong> <span class="text-success fw-bold">+@soLuong</span></p>
                    <p class="mb-1"><strong>Nguồn:</strong> @(string.IsNullOrEmpty(nhaCungCap) ? "Chưa chọn" : nhaCungCap)</p>
                    <hr />
                    <small class="text-muted">Lưu ý: Sau khi xác nhận, số lượng tồn kho của sản phẩm sẽ tăng lên tương ứng.</small>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string? maSanPham;
    private string? tenSanPham;
    private int soLuong = 1;
    private DateTime ngayNhap = DateTime.Now;
    private string? nhaCungCap;
    private string? ghiChu;
    private string? errorMessage;
    private string? successMessage;

    // Danh sách nhà cung cấp để đổ vào Dropdown
    private List<Supplier> suppliers = new();

    protected override void OnInitialized()
    {
        // Load danh sách nhà cung cấp từ DB
        // Nếu bạn chưa chạy lệnh Update-Database sau khi thêm bảng Supplier, đoạn này sẽ lỗi
        try
        {
            suppliers = Db.Suppliers.ToList();
        }
        catch
        {
            // Bỏ qua lỗi nếu chưa tạo bảng, để tránh crash trang
            suppliers = new List<Supplier>();
        }
    }

    private void XuLyNhapKho()
    {
        errorMessage = null;
        successMessage = null;

        if (string.IsNullOrWhiteSpace(maSanPham) && string.IsNullOrWhiteSpace(tenSanPham))
        {
            errorMessage = "Vui lòng nhập Mã SKU hoặc Tên sản phẩm để tìm kiếm.";
            return;
        }

        if (soLuong <= 0)
        {
            errorMessage = "Số lượng nhập phải lớn hơn 0.";
            return;
        }

        if (string.IsNullOrEmpty(nhaCungCap))
        {
            errorMessage = "Vui lòng chọn Nhà cung cấp.";
            return;
        }

        Product? product = null;
        if (!string.IsNullOrWhiteSpace(maSanPham))
        {
            product = Db.Products.FirstOrDefault(p => p.SKU == maSanPham);
        }

        if (product == null && !string.IsNullOrWhiteSpace(tenSanPham))
        {
            product = Db.Products.FirstOrDefault(p => p.Name.Contains(tenSanPham));
        }

        if (product == null)
        {
            errorMessage = "Không tìm thấy sản phẩm nào khớp với thông tin nhập vào. Vui lòng kiểm tra lại hoặc tạo sản phẩm mới ở trang Quản lý sản phẩm.";
            return;
        }

        product.Stock += soLuong;

        var log = new InventoryLog
        {
            ProductName = product.Name,
            SKU = product.SKU,
            Type = "Nhập",
            Quantity = soLuong,
            StaffName = "Admin",
            Note = $"Nguồn: {nhaCungCap}. Ghi chú: {ghiChu}",
            CreatedAt = ngayNhap
        };

        Db.InventoryLogs.Add(log);
        Db.SaveChanges();

        successMessage = $"Đã nhập thành công {soLuong} chiếc cho sản phẩm: {product.Name}. Tồn kho mới: {product.Stock}";

        // Reset form
        maSanPham = "";
        tenSanPham = "";
        soLuong = 1;
        ghiChu = "";
        // Không reset nhaCungCap để nhập tiếp cho tiện
    }

    private void HuyBo()
    {
        Nav.NavigateTo("/admin/products");
    }
}