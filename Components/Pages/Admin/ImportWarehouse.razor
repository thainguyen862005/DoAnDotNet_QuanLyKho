@page "/admin/import"
@layout AdminLayout
@using QuanLyKho.Components.Layout
@inject NavigationManager Nav
@rendermode InteractiveServer

<PageTitle>Nhập kho</PageTitle>

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Nhập Kho (Admin)</h1>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin phiếu nhập</h6>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mã sản phẩm:</label>
                        <input class="form-control" @bind="maSanPham" placeholder="Nhập mã sản phẩm..." />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên sản phẩm:</label>
                        <input class="form-control" @bind="tenSanPham" placeholder="Nhập tên sản phẩm..." />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Số lượng nhập:</label>
                            <input type="number" class="form-control" @bind="soLuong" min="1" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Ngày nhập:</label>
                            <input type="date" class="form-control" @bind="ngayNhap" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Nhà cung cấp:</label>
                        <input class="form-control" @bind="nhaCungCap" placeholder="Tên nhà cung cấp..." />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Ghi chú:</label>
                        <textarea class="form-control" rows="3" @bind="ghiChu" placeholder="Ghi chú..."></textarea>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <button class="btn btn-secondary" @onclick="HuyBo">Hủy bỏ</button>
                        <button class="btn btn-success" @onclick="XuLyNhapKho">Xác nhận Nhập</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-info text-white">
                    <h6 class="m-0 font-weight-bold">Tóm tắt</h6>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>Mã SP:</strong> @maSanPham</p>
                    <p class="mb-1"><strong>Tên SP:</strong> @tenSanPham</p>
                    <p class="mb-1"><strong>Số lượng:</strong> @soLuong</p>
                    <p class="mb-1"><strong>Nhà cung cấp:</strong> @nhaCungCap</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string? maSanPham;
    private string? tenSanPham;
    private int soLuong = 1;
    private DateTime ngayNhap = DateTime.Now;
    private string? nhaCungCap;
    private string? ghiChu;
    private string? errorMessage;

    private void XuLyNhapKho()
    {
        if (string.IsNullOrWhiteSpace(maSanPham) && string.IsNullOrWhiteSpace(tenSanPham))
        {
            errorMessage = "Vui lòng nhập Mã hoặc Tên sản phẩm.";
            return;
        }

        if (soLuong <= 0)
        {
            errorMessage = "Số lượng phải lớn hơn 0.";
            return;
        }

        // TODO: Thêm logic lưu vào DB hoặc gọi API

        // Sau khi xử lý, điều hướng về danh sách tồn kho admin
        Nav.NavigateTo("/admin/inventory");
    }

    private void HuyBo()
    {
        Nav.NavigateTo("/admin/inventory");
    }
}

