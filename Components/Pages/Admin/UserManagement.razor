@code {
    public class User
    {
        public int Id { get; set; }
        public string Username { get; set; } = "";
        public string Email { get; set; } = "";
        public string PasswordHash { get; set; } = "";
        public string Phone { get; set; } = "";
        public int Role { get; set; }
        public string Status { get; set; } = "Active";
        public DateTime CreatedAt { get; set; } = DateTime.Now;
    }

    private string SearchTerm = "";
    private bool IsShowModal;
    private bool ShowDeleteConfirm;
    private User EditingUser = new();
    private User? DeletingUser;

    private List<User> users = new List<User>
    {
        new User { Id = 101, Username = "admin_main", Email = "admin@gmail.com", Phone = "0909123456", Role = 1, Status = "Active", CreatedAt = new DateTime(2025, 1, 10, 8, 30, 0) },
