@page "/staff/sales"
@layout StaffLayout
@using QuanLyKho.Data
@using QuanLyKho.Models
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Authorization
@inject AppDbContext Db
@inject AuthenticationStateProvider AuthStateProvider
@rendermode InteractiveServer

<PageTitle>Bán hàng (Staff)</PageTitle>

<div class="container-fluid" @onclick="CloseDropdown">
    <div class="d-flex justify-content-between align-items-center mt-3 mb-4">
        <h3 class="fw-bold text-gray-800 m-0">Bán Hàng (Staff POS)</h3>
        <span class="badge bg-primary fs-6">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span>
    </div>

    <div class="row">
        <div class="col-lg-7">
            <div class="card shadow border-0 mb-4">
                <div class="card-header py-3 bg-primary text-white">
                    <h6 class="m-0 fw-bold"><i class="bi bi-search"></i> Tra cứu & Chọn sản phẩm</h6>
                </div>
                <div class="card-body bg-light-subtle">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger shadow-sm border-start border-5 border-danger">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
                        </div>
                    }

                    <div class="row g-2 mb-3">
                        <div class="col-md-4">
                            <label class="form-label fw-bold text-primary">Hãng:</label>
                            <select class="form-select border-primary shadow-sm" @onchange="OnBrandFilterChange">
                                <option value="">-- Tất cả hãng --</option>
                                @foreach (var b in brands)
                                {
                                    <option value="@b.Brand_Id">@b.Brand_name</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-8 position-relative">
                            <label class="form-label fw-bold text-primary">Tìm sản phẩm:</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-primary"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control border-primary shadow-sm"
                                       placeholder="Nhập tên sản phẩm..."
                                       @bind="searchTerm"
                                       @bind:event="oninput"
                                       @onfocus="OpenDropdown"
                                       @onclick="OpenDropdown"
                                       @onclick:stopPropagation />
                            </div>

                            @if (showDropdown && FilteredProducts.Any())
                            {
                                <ul class="dropdown-menu show w-100 shadow-lg mt-1 border-primary"
                                    style="max-height: 350px; overflow-y: auto; position: absolute; z-index: 1000;">
                                    @foreach (var item in FilteredProducts.Take(displayLimit))
                                    {
                                        <li>
                                            <button class="dropdown-item d-flex justify-content-between align-items-center px-3 py-2 border-bottom"
                                                    @onclick="() => SelectProduct(item)"
                                                    disabled="@(item.StockQuantity <= 0)">
                                                <div>
                                                    <strong class="text-dark">@item.Product?.Sp_name</strong>
                                                    <small class="text-muted d-block">SKU: @item.SKU | @item.Color - @item.Storage</small>
                                                </div>
                                                <div class="text-end">
                                                    <div class="fw-bold text-primary">@item.Price.ToString("N0") đ</div>
                                                    @if (item.StockQuantity > 0)
                                                    {
                                                        <span class="badge bg-info-subtle text-info">Còn: @item.StockQuantity</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger-subtle text-danger">HẾT HÀNG</span>
                                                    }
                                                </div>
                                            </button>
                                        </li>
                                    }
                                    @if (FilteredProducts.Count() > displayLimit)
                                    {
                                        <li>
                                            <button class="dropdown-item text-center text-primary fw-bold py-2"
                                                    @onclick="LoadMoreProducts" @onclick:stopPropagation>
                                                <i class="bi bi-chevron-down"></i> Hiển thị thêm...
                                            </button>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>

                    <div class="row g-3 p-3 bg-white rounded border mb-3">
                        <div class="col-md-6">
                            <label class="small fw-bold text-muted">SẢN PHẨM ĐANG CHỌN:</label>
                            <div class="fw-bold text-dark fs-5">@(selectedItem != null ? $"{selectedItem.Product?.Sp_name} ({selectedItem.Color})" : "Chưa chọn")</div>
                        </div>
                        <div class="col-md-3">
                            <label class="small fw-bold text-muted">ĐƠN GIÁ:</label>
                            <div class="fw-bold text-success fs-5">@(selectedItem?.Price.ToString("N0") ?? "0") đ</div>
                        </div>
                        <div class="col-md-3">
                            <label class="small fw-bold text-muted">KHO CÒN:</label>
                            <div class="fw-bold text-danger fs-5">@(selectedItem?.StockQuantity.ToString() ?? "0")</div>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Số lượng mua:</label>
                            <input type="number" class="form-control form-control-lg border-primary" @bind="soLuong" min="1"
                                   max="@(selectedItem?.StockQuantity ?? 1)" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Khách hàng:</label>
                            <input class="form-control form-control-lg" @bind="tenKhachHang" placeholder="Tên khách hoặc SĐT..." />
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <button class="btn btn-outline-secondary" @onclick="LamMoi">
                            <i class="bi bi-arrow-counterclockwise"></i> Làm mới
                        </button>
                        <button class="btn btn-primary btn-lg px-5 fw-bold shadow" @onclick="ThemVaoGioHang"
                                disabled="@(selectedItem == null || selectedItem.StockQuantity <= 0)">
                            <i class="bi bi-cart-plus-fill me-2"></i> THÊM VÀO GIỎ
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card shadow border-0 h-100">
                <div class="card-header py-3 bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h6 class="m-0 fw-bold"><i class="bi bi-cart4"></i> Chi tiết giỏ hàng</h6>
                    <span class="badge bg-dark rounded-pill">@gioHang.Count dòng</span>
                </div>
                <div class="card-body d-flex flex-column p-0">
                    @if (!gioHang.Any())
                    {
                        <div class="text-center text-muted my-auto py-5">
                            <i class="bi bi-basket3 display-1 opacity-25"></i>
                            <p class="mt-3">Giỏ hàng đang trống</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive flex-grow-1" style="max-height: 450px; overflow-y:auto;">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light sticky-top">
                                    <tr>
                                        <th class="ps-3">Sản phẩm</th>
                                        <th class="text-center" style="width: 100px">SL</th>
                                        <th class="text-end pe-3">Thành tiền</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in gioHang)
                                    {
                                        <tr>
                                            <td class="ps-3">
                                                <div class="fw-bold">@item.ProductName</div>
                                                <small class="text-muted">@item.Price.ToString("N0")</small>
                                            </td>
                                            <td>
                                                <input type="number" class="form-control form-control-sm text-center fw-bold"
                                                       value="@item.Quantity"
                                                       @onchange="@(e => UpdateCartQuantity(item, e))" min="1" />
                                            </td>
                                            <td class="text-end fw-bold text-primary pe-3">
                                                @((item.Quantity * item.Price).ToString("N0"))
                                            </td>
                                            <td class="text-center">
                                                <button class="btn btn-link text-danger p-0" @onclick="() => XoaKhoiGio(item)">
                                                    <i class="bi bi-trash3-fill"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="p-4 bg-light border-top mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="h6 text-muted mb-0">Tổng tiền thanh toán:</span>
                                <span class="h3 text-danger fw-bold mb-0">@gioHang.Sum(x => x.Quantity * x.Price).ToString("N0") đ</span>
                            </div>
                            <button class="btn btn-success w-100 py-3 fw-bold text-uppercase shadow-sm" @onclick="ThanhToan">
                                <i class="bi bi-cash-stack me-2"></i> XÁC NHẬN THANH TOÁN
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (showSuccess)
{
    <div class="alert alert-success position-fixed top-0 end-0 m-3 shadow-lg border-0 d-flex align-items-center"
         style="z-index: 2000; min-width: 300px; border-left: 5px solid #198754 !important;">
        <i class="bi bi-check-circle-fill fs-3 me-3"></i>
        <div>
            <div class="fw-bold">Thành công!</div>
            <small>Đơn hàng đã được lưu và trừ kho.</small>
        </div>
    </div>
}

@code {
    public class CartItem
    {
        public int SpItemId { get; set; }
        public string ProductName { get; set; } = "";
        public int Quantity { get; set; }
        public decimal Price { get; set; }
    }

    private List<ProductItem> productItems = new();
    private List<Brand> brands = new();
    private List<CartItem> gioHang = new();
    private ProductItem? selectedItem;

    private string searchTerm = "";
    private int? selectedBrandId;
    private bool showDropdown = false;
    private int displayLimit = 10;

    private int soLuong = 1;
    private string tenKhachHang = "Khách vãng lai";
    private string nhanVienBan = "";
    private string errorMessage = "";
    private bool showSuccess = false;

    private IEnumerable<ProductItem> FilteredProducts => 
        productItems.Where(p => 
            (!selectedBrandId.HasValue || p.Product?.Brands_id == selectedBrandId) &&
            (string.IsNullOrWhiteSpace(searchTerm) || 
             (p.Product?.Sp_name?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
             (p.SKU?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false))
        );

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        nhanVienBan = authState.User.Identity?.Name ?? "Staff";
        await LoadData();
    }

    private async Task LoadData()
    {
        brands = await Db.Brands.AsNoTracking().ToListAsync();
        productItems = await Db.ProductItems
            .Include(x => x.Product)
            .ThenInclude(p => p.Brand)
            .ToListAsync();
    }

    private void OpenDropdown() { showDropdown = true; displayLimit = 10; }
    private async Task CloseDropdown() { await Task.Delay(200); showDropdown = false; }
    private void LoadMoreProducts() => displayLimit += 10;

    private void OnBrandFilterChange(ChangeEventArgs e)
    {
        selectedBrandId = int.TryParse(e.Value?.ToString(), out int id) ? id : null;
        selectedItem = null;
        searchTerm = "";
    }

    private void SelectProduct(ProductItem item)
    {
        selectedItem = item;
        searchTerm = item.Product?.Sp_name ?? "";
        showDropdown = false;
        soLuong = 1;
        errorMessage = "";
    }

    private void LamMoi()
    {
        selectedItem = null;
        searchTerm = "";
        selectedBrandId = null;
        soLuong = 1;
        errorMessage = "";
        tenKhachHang = "Khách vãng lai";
    }

    private void ThemVaoGioHang()
    {
        if (selectedItem == null || soLuong <= 0) return;

        if (soLuong > selectedItem.StockQuantity)
        {
            errorMessage = $"Sản phẩm '{selectedItem.Product?.Sp_name}' chỉ còn {selectedItem.StockQuantity} trong kho!";
            return;
        }

        var existing = gioHang.FirstOrDefault(x => x.SpItemId == selectedItem.Sp_item_id);
        if (existing != null)
        {
            if (existing.Quantity + soLuong > (selectedItem.StockQuantity + existing.Quantity))
            {
                errorMessage = "Tổng số lượng trong giỏ vượt quá tồn kho!";
                return;
            }
            existing.Quantity += soLuong;
        }
        else
        {
            gioHang.Add(new CartItem {
                SpItemId = selectedItem.Sp_item_id,
                ProductName = $"{selectedItem.Product?.Sp_name} ({selectedItem.Color})",
                Quantity = soLuong,
                Price = selectedItem.Price
            });
        }

        selectedItem.StockQuantity -= soLuong;
        errorMessage = "";
    }

    private void XoaKhoiGio(CartItem item)
    {
        gioHang.Remove(item);
        var source = productItems.FirstOrDefault(p => p.Sp_item_id == item.SpItemId);
        if (source != null) source.StockQuantity += item.Quantity;
    }

    private void UpdateCartQuantity(CartItem item, ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int newQty) && newQty >= 1)
        {
            var source = productItems.FirstOrDefault(p => p.Sp_item_id == item.SpItemId);
            if (source != null)
            {
                int currentTotalPool = source.StockQuantity + item.Quantity;
                if (newQty > currentTotalPool)
                {
                    errorMessage = "Số lượng yêu cầu vượt quá kho!";
                    return;
                }
                source.StockQuantity = currentTotalPool - newQty;
                item.Quantity = newQty;
                errorMessage = "";
            }
        }
    }

    private async Task ThanhToan()
    {
        if (!gioHang.Any()) return;

        using var transaction = await Db.Database.BeginTransactionAsync();
        try
        {
            // 1. Tạo đơn xuất kho
            var invTrans = new Inventory_Transaction
            {
                UserID = Db.Users.FirstOrDefault(u => u.Username == nhanVienBan)?.User_id,
                TransactionDate = DateTime.Now,
                Type = "Xuất",
                Note = $"POS Staff: {nhanVienBan} bán cho {tenKhachHang}"
            };
            Db.Inventory_Transactions.Add(invTrans);
            await Db.SaveChangesAsync();

            // 2. Lưu chi tiết & Cập nhật kho thật
            foreach (var item in gioHang)
            {
                // Chi tiết giao dịch
                Db.Transaction_details.Add(new Transaction_detail {
                    TransactionID = invTrans.TransactionID,
                    Sp_item_ID = item.SpItemId,
                    Quantity = item.Quantity,
                    UnitPrice = item.Price
                });

                // Trừ tồn kho trong DB
                var dbItem = await Db.ProductItems.FindAsync(item.SpItemId);
                if (dbItem != null) dbItem.StockQuantity -= item.Quantity;
            }

            await Db.SaveChangesAsync();
            await transaction.CommitAsync();

            // Reset UI
            gioHang.Clear();
            LamMoi();
            showSuccess = true;
            await LoadData();
            StateHasChanged();

            await Task.Delay(3000);
            showSuccess = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await transaction.RollbackAsync();
            errorMessage = "Lỗi hệ thống: " + ex.Message;
        }
    }
}

