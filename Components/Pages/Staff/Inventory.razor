@page "/staff/inventory"
@layout Components.Layout.StaffLayout
@using QuanLyKho.Data
@rendermode InteractiveServer

@inject AppDbContext Db
@inject NavigationManager Nav

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <div>
            <h2 class="fw-bold mb-0 text-secondary">Tra cứu Tồn kho</h2>
            <p class="text-muted">Dữ liệu thực tế từ hệ thống</p>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-success shadow-sm fw-bold" @onclick='() => Nav.NavigateTo("/staff/import")'>
                <i class="bi bi-box-arrow-in-down"></i> Nhập hàng
            </button>
            <button class="btn btn-danger shadow-sm fw-bold" @onclick='() => Nav.NavigateTo("/staff/export")'>
                <i class="bi bi-box-arrow-up"></i> Xuất hàng
            </button>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-2">
            <div class="input-group border-0">
                <span class="input-group-text bg-white border-0 text-muted"><i class="bi bi-search"></i></span>
                <input class="form-control border-0 shadow-none"
                       placeholder="Tìm kiếm sản phẩm, mã SKU, hãng..."
                       @bind="SearchTerm"
                       @bind:event="oninput" />
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm overflow-hidden">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr class="text-secondary small fw-bold text-uppercase">
                    <th class="ps-4">Sản phẩm</th>
                    <th>Mã SKU</th>
                    <th>Hãng</th>
                    <th class="text-center">Tồn kho</th>
                    <th class="text-center">Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @if (FilteredProducts.Any())
                {
                    @foreach (var prod in FilteredProducts)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">@prod.Name</div>
                                <small class="text-muted">@prod.Storage</small>
                            </td>
                            <td class="text-muted">@prod.SKU</td>
                            <td>
                                <span class="badge bg-light text-dark border">@prod.Brand</span>
                            </td>
                            <td class="text-center">
                                <span class="fw-bold @(prod.Stock < 5 ? "text-danger" : "text-primary")">
                                    @prod.Stock
                                </span>
                            </td>
                            <td class="text-center">
                                @if (prod.Stock > 0)
                                {
                                    <span class="badge bg-success-subtle text-success">Sẵn hàng</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger">Hết hàng</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <i class="bi bi-inbox fs-1 opacity-50"></i>
                            <div class="mt-2">Không tìm thấy sản phẩm nào</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private string SearchTerm = "";
    private List<Product> products = new();

    protected override void OnInitialized()
    {
        // Lấy dữ liệu thật từ SQL Server
        products = Db.Products.OrderByDescending(p => p.Id).ToList();
    }

    // Logic lọc tìm kiếm (Client-side filtering)
    private List<Product> FilteredProducts => products
        .Where(p => string.IsNullOrWhiteSpace(SearchTerm) ||
                    p.Name.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                    (p.SKU != null && p.SKU.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase)) ||
                    (p.Brand != null && p.Brand.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase)))
        .ToList();
}