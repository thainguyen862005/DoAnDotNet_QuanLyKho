<body>
    <Routes />
    <ReconnectModal />
    <script src="_framework/blazor.web.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        window.setupChart = (canvasId, config) => {
            const ctx = document.getElementById(canvasId).getContext('2d');
            const type = config.type;
            const colorImportBase = '#3b82f6';
            const bgImport = ctx.createLinearGradient(0, 0, 0, 400);
            bgImport.addColorStop(0, 'rgba(59, 130, 246, 0.6)');
            bgImport.addColorStop(1, 'rgba(59, 130, 246, 0.0)');

            const colorExportBase = '#ef4444';
            const bgExport = ctx.createLinearGradient(0, 0, 0, 400);
            bgExport.addColorStop(0, 'rgba(239, 68, 68, 0.6)');
            bgExport.addColorStop(1, 'rgba(239, 68, 68, 0.0)');

            if (config.data.datasets.length > 0) {
                if (config.data.datasets[0]) {
                    config.data.datasets[0].borderColor = colorImportBase;
                    config.data.datasets[0].pointBackgroundColor = "#fff";
                    config.data.datasets[0].pointBorderColor = colorImportBase;
                    config.data.datasets[0].backgroundColor = type === 'line' ? bgImport : colorImportBase;
                }
                if (config.data.datasets[1]) {
                    config.data.datasets[1].borderColor = colorExportBase;
                    config.data.datasets[1].pointBackgroundColor = "#fff";
                    config.data.datasets[1].pointBorderColor = colorExportBase;
                    config.data.datasets[1].backgroundColor = type === 'line' ? bgExport : colorExportBase;
                }
            }

            if (window.myChartInstance) {
                window.myChartInstance.destroy();
            }

            window.myChartInstance = new Chart(ctx, config);
        }

        window.setupPieChart = (canvasId, config) => {
            const ctx = document.getElementById(canvasId).getContext('2d');
            if (window.pieChartInstance) window.pieChartInstance.destroy();
            window.pieChartInstance = new Chart(ctx, config);
        }

        window.downloadFile = (fileName, content) => {
            const link = document.createElement('a');
            link.download = fileName;
            link.href = "data:text/csv;charset=utf-8,%EF%BB%BF" + encodeURIComponent(content);
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    </script>
</body>
</html>